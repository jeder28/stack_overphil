<p>Vote on this <%= object.class.to_s.downcase %>:</p>
<table>
  <tr>
    <td>
      <%= form_tag('/vote', :method=>'post') do %>
        <%= hidden_field_tag "vote[value]", 1 %>
        <%= hidden_field_tag "vote[votable_id]", object.id %>
        <%= hidden_field_tag "vote[votable_type]", "#{object.class}" %>
        <%= hidden_field_tag "vote[voter_id]", current_user.id %>
        <%= submit_tag "+1" %>
      <% end %>
    </td>
    <td>
      <%= form_tag('/vote', :method=>'post') do %>
        <%= hidden_field_tag "vote[value]", -1 %>
        <%= hidden_field_tag "vote[votable_id]", object.id %>
        <%= hidden_field_tag "vote[votable_type]", "#{object.class}" %>
        <%= hidden_field_tag "vote[voter_id]", current_user.id %>
        <%= submit_tag "-1" %>
      <% end %>
    </td>
  </tr>
</table>