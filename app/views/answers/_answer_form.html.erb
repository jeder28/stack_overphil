<div class="answer-header">
    <h3>Answer:</h3>
</div>
<div class="ques-answer cf">
  <%= form_for @answer, :url => "/questions/#{question.id}/answers" do |f| %>
    <div class="body-content"><%= f.text_area :content %></div>
    <div class="submit-btn"><%= f.submit "Post your Answer" %></div>
  <% end %>

  <% if @answer.errors.any?  %>
  <div class="error-messages">
    <h4 class="alert-alert">Warning:</h4>
    <ul>
      <% @answer.errors.full_messages.each do |msg| %>
        <li class="alert-alert"><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
</div>


