<!DOCTYPE html>
<html>
<head>
  <title>StackOverphil</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<h2>stackOverphil</h2>
<ul>
<% if logged_in? %>
  <li><%= link_to current_user.username, user_path(current_user.id) %> | <%= link_to "logout", logout_path %></li>
<% else %>
  <li><%= link_to "register", register_path %> | <%= link_to "login", login_path %></li>
<% end %>
</ul>
<%= yield %>

</body>
</html>
